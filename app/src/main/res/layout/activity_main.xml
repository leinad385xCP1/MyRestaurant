<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#1F1F1F"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="46dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            app:srcCompat="@drawable/pizzahouse"
            tools:srcCompat="@drawable/pizzahouse" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="46dp" />

        <Button
            android:id="@+id/buttonMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F44747"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="abrirMenu"
            android:text="@string/app_menu"
            android:textColor="#000000" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="41dp" />

        <Button
            android:id="@+id/buttonSedes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F44747"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="abrirSedes"
            android:text="@string/app_sede"
            android:textColor="#000000"
            app:iconTint="#000000" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="43dp" />

        <Button
            android:id="@+id/buttonReserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F44747"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="abrirReserva"
            android:text="@string/app_reserva"
            android:textColor="#000000" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/buttonPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F44747"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="abrirPedido"
            android:text="@string/app_pedido"
            android:textColor="#000000" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>